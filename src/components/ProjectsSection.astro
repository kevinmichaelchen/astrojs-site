---
import Project from "./Project.astro";

interface Project {
  name: string;
  desc: string;
  icon: string;
  link: string;
}

export interface Props {
  sectionName: string;
  projects: Project[];
}

const { sectionName, projects } = Astro.props;
---

<h4 class="mt-10 font-bold">{sectionName}</h4>
<div
  class="grid py-2 -mx-3 gap-2 grid-cols-[repeat(auto-fit,minmax(250px,1fr))]"
>
  {projects.map((p) => <Project {...p} />)}
</div>
